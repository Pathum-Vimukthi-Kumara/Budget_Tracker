<Window x:Class="Budget_Tracker.OnboardingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Welcome to Budget Tracker"
        Height="512"
        Width="900">

    <!-- Define a 2-row layout: row 0 for the header, row 1 for the main content -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- Header -->
            <RowDefinition Height="*" />
            <!-- Main content -->
        </Grid.RowDefinitions>

        <!-- HEADER SECTION -->
        <Border 
            Background="#023e8a" 
            Height="40"
            VerticalAlignment="Top"
            CornerRadius="5"
            Grid.Row="0">
            <Grid>
                <!-- Define columns for Title + Buttons -->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <!-- Title on the left -->
                    <ColumnDefinition Width="*" />
                    <!-- Filler space -->
                    <ColumnDefinition Width="Auto" />
                    <!-- Dashboard btn -->
                    <ColumnDefinition Width="Auto" />
                    <!-- Transaction btn -->
                    <ColumnDefinition Width="Auto" />
                    <!-- Setting btn -->
                </Grid.ColumnDefinitions>

                <!-- Header Title -->
                <TextBlock 
                    Text="Budget Tracker"
                    FontSize="24"
                    FontWeight="Bold"
                    Foreground="White"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Left"
                    Margin="10,0,0,0"
                    Grid.Column="0" />

                <!-- Dashboard Button -->
              
                
            </Grid>
        </Border>

        <!-- MAIN CONTENT (Background Image + Overlay) -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="695*" />
                <ColumnDefinition Width="86*"/>
                <ColumnDefinition Width="119*" />
            </Grid.ColumnDefinitions>

            <!-- Background Image -->
            <Grid.Background>
                <!-- Replace "background.jpg" with your actual image path -->
                <ImageBrush 
                            Stretch="UniformToFill" ImageSource="/background.jpg" />
            </Grid.Background>

            <!-- Semi-transparent overlay panel -->
            <Border
                Background="#F0F0F0"
                CornerRadius="10"
                Padding="20"
                Opacity="0.9"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Margin="50,0,0,0"
                Width="400" Height="258">

                <StackPanel>
                    <!-- Main Title -->
                    <TextBlock 
                        Text="Welcome to Your Budget Tracker!"
                        FontSize="28"
                        FontWeight="Bold"
                        Foreground="#0000A0"
                        Margin="0,0,0,10"
                        TextWrapping="Wrap" />

                    <!-- Subtitle / Description -->
                    <TextBlock 
                        Text="Get an overview of your finances at a glance—track budgets, view transactions, and see easy-to-read graphs to stay in control."
                        FontSize="14"
                        Foreground="Black"
                        TextWrapping="Wrap"
                        Margin="0,0,0,20" />

                    <!-- Call-to-action button -->
                    <Button 
                        Content="Get Started"
                        Background="Black"
                        Foreground="White"
                        FontSize="16"
                        Padding="10,5"
                        HorizontalAlignment="Left"
                        Click="GetStartedButton_Click" />
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
