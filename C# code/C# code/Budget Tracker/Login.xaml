<Window x:Class="Budget_Tracker.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="300" Width="400">
    <Grid>
        <!-- Title -->
        <TextBlock Text="Login" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0"/>

        <!-- Email -->
        <TextBlock Text="Email:" Margin="50,80,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="16"/>
        <TextBox Name="EmailTextBox" Width="250" Height="30" Margin="50,110,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>

        <!-- Password -->
        <TextBlock Text="Password:" Margin="50,150,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="16"/>
        <PasswordBox Name="PasswordBox" Width="250" Height="30" Margin="50,180,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>

        <!-- Login Button -->
        <Button Content="Login" Width="120" Height="40" Margin="50,220,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Background="#4caf50" Foreground="White" FontSize="16" Click="LoginButton_Click"/>

        <!-- Message Text -->
        <TextBlock Name="MessageTextBlock" FontSize="14" Foreground="Red" Margin="50,270,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
    </Grid>
</Window>
